{
    "name": "alloylint",
    "version": "0.0.2",
    "description": "apply eslint autofix but keep last author info in git blame",
    "contributors": [
        "sigmaliu <sigmaliu@tencent.com>"
    ],
    "main": "./dist/index.js",
    "bin": {
        "alloylint": "./dist/index.js"
    },
    "keywords": [
        "alloy",
        "alloyteam",
        "front-end",
        "javascript",
        "typscript",
        "eslint",
        "eslint autofix",
        "autofix",
        "style",
        "blame",
        "history",
        "fix"
    ],
    "homepage": "https://github.com/AlloyTeam/AlloyLint",
    "repository": {
        "type": "git",
        "url": "https://github.com/AlloyTeam/AlloyLint.git"
    },
    "bugs": {
        "url": "https://github.com/AlloyTeam/AlloyLint/issues"
    },
    "scripts": {
        "dist": "node ./script/dist.js",
        "dev": "node ./script/dev.js",
        "test": "node ./script/test.js",
        "prepublishOnly": "npm run dist",
        "demo:fix": "npm run dist; cross-env MODE=demo node ./dist/index.js 'demo/**/*'",
        "demo:fixAuth": "npm run dist; cross-env MODE=demo node ./dist/index.js -a 'demo/**/*'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "{src,script}/**/*.{js,ts}": [
            "node ./script/dist.js",
            "node ./dist/index.js",
            "git add"
        ]
    },
    "author": "sigmaliu <sigmaliu@tencent.com>",
    "license": "MIT",
    "dependencies": {
        "@types/eslint": "^6.1.3",
        "@types/node": "^13.1.2",
        "commander": "^4.0.1",
        "globby": "^10.0.1",
        "eslint": "^6.8.0",
        "fs-extra": "^8.1.0"
    },
    "files": [
        "dist/*",
        "docs/*"
    ],
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "cross-env": "^7.0.0",
        "eslint-config-airbnb-typescript": "^6.3.1",
        "eslint-config-alloy": "^3.5.0",
        "eslint-plugin-import": "^2.20.0",
        "eslint-plugin-react": "^7.17.0",
        "husky": "^3.1.0",
        "lint-staged": "^9.5.0",
        "typescript": "^3.7.5"
    },
    "engines": {
        "node": ">=0.10.0",
        "npm": ">=1.2.10"
    }
}
