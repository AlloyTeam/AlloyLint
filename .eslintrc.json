{
    "extends": [
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6,
        "ecmaFeatures": {},
        "project": "./tsconfig.json"
    },
    "env": {
        "browser": true,
        "mocha": true,
        "node": true
    },
    "globals": {},
    "rules": {
        "@typescript-eslint/ban-ts-ignore": "off",
        "no-console": "off",
        "no-restricted-syntax": "off",
        "no-plusplus": "off",
        "no-continue": "off",
        "@typescript-eslint/indent": ["error", 4],
        "max-len": ["error", 140]
    }
}
